---
const { icon, ...attrs } = Astro.props;
const path = icon.startsWith("/")
  ? "../../../public" + icon + "?raw"
  : `../../../public/ionicons/${icon}.svg?raw`;
let { default: innerHTML } = await import(/* @vite-ignore */ path);
const parts = innerHTML.split("<svg");
let customSvg = "<svg";
for (const [key, value] of Object.entries(attrs)) {
  customSvg += ` ${key}="${value}"`;
}
innerHTML = parts.join(customSvg);
---

<Fragment set:html={innerHTML} />

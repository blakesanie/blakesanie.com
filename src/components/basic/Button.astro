---
const props = Astro.props;
// console.log("button props", props);
import { Icon } from "astro-icon";
---

<button class:list={[props.class, "shadowHover"]}
  >{props.icon && <Icon name={props.icon} />}<slot /></button
>

<style>
  button {
    border: none;
    background: none;
    font-size: 1em;
    font-family: inherit;
    /* color: black; */
    padding: 0.7em 1.2em;
    border-radius: 0.4em;
    font-weight: 600;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
  }
  button:hover {
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.1);
  }
  button [astro-icon] {
    width: 1.25em;
    height: 1.25em;
    vertical-align: center;
    margin-right: 0.5em;
  }
</style>

<body>
  <div id="cover">
    <div class="modules" id="inputs">
      <div class="module" id="speed">
        <div class="hbox center">
          <p class="moduleValue val">25</p>
          <div class="vbox">
            <p class="moduleName">Speed</p>
            <select class="moduleValue unit">
              <option value="mph">mph</option>
              <option value="kmph">km/h</option>
            </select>
          </div>
          <div class="vbox" id="direction">
            <p class="moduleName">Flow</p>
            <select class="moduleValue unit">
              <option value="right">Right</option>
              <option value="left">Left</option>
            </select>
          </div>
        </div>

        <input type="range" min="1" max="40" value="25" step="1" />


---

<HeaderAndFooter allowMainStyles title="Press" description="">
  <h1>Press</h1>
  <div id="articles">
    {
      press.map(({ title, site, image, date, link }) => {
        return (
          <a class="article" href={link} target="_blank">
            <p class="title">{title}</p>
            <p class="site">{site}</p>
            <p class="date">{date}</p>
            <Img
              src={"/src/assets/images/press/" + image}
              alt={""}
              loading="lazy"
              placeholder="blurred"
              format="webp"
              breakpoints={[800]}
              quality={70}
            />
          </a>
        );
      })
    }
  </div>
</HeaderAndFooter>

<style>
  #articles {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .article {
    position: relative;
    width: 100%;
    margin: 14px;
    box-shadow: 0 0 30px 0 rgba(0, 0, 0, 0.1);
    padding: 1em;
    padding-left: 0;
    min-height: 150px;
    max-width: 800px;
    border-radius: 0.6em;
    overflow: hidden;
    cursor: pointer;
    transition: box-shadow 0.1s ease;
  }
  .article:hover {
    box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1);
  }
  .article > p {
    width: calc(100% - 150px);
    margin-left: 150px;
    padding: 0 1.4rem !important;
    text-indent: 0 !important;
    color: black !important;
  }
  .article :global(img) {
    position: absolute !important;
    top: 0 !important;
    width: 150px !important;
    height: 100% !important;
    object-fit: cover !important;
  }
  .article .title {
    font-size: 1.4rem;
  }
  .article .site,
  .article .date {
    font-size: 1rem;
    opacity: 0.5;
  }

  .article .site {
    font-style: italic;
  }

  @media screen and (max-width: 500px) {
    .article {
      padding: 1em 0;
      display: flex;
      flex-direction: column;
    }
    .article > p {
      width: 100%;
      margin-left: 0;
    }
    .article :global(img) {
      position: static !important;
      width: calc(100%+2em) !important;
      /* margin-left: -1em; */
      margin-bottom: -1em;
      height: 200px !important;
      margin-top: 0.7em;
    }
  }
</style>
